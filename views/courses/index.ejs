<% layout("/layouts/boilerplate") %>

    <body>

        <!-- <form action="/courses/new" method="get">
            <button>create new course</button>
        </form> -->
           
         <!-- Carousel -->
         <div id="carouselExampleCaptions" class="carousel slide">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img src="/img/learning.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Learn New Things</h5>
                  <p>Build yourself with the new technologies and level up.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/img/learning-2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Easy to Understand</h5>
                  <p>This platform provides variety of courses. Learn on your own pace.</p>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/img/networking-2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5>Networking oppurtunity</h5>
                  <p>Interact with people with ame mindset. Join the community.</p>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>


          <!-- <div>Courses Offered</div> -->

          <h2 style="margin-bottom: 19px;">Courses Offered</h2>
          
          <!-- card -->
        <div class="row">
            <% for(let course of allCourses) {%>
                <div class="card" style="width: 30%;">
                    <img src="<%= course.image %>" class="card-img" style="height: 15rem;" alt="...">
                    <div class="card-body">
                        <div><strong><%= course.title %></strong>
                            (<%= course.rating %>)
                        </div>
                        <p class="card-text"> &#8377; <%= course.price.toLocaleString("en-IN") %>
                                <!-- <hr>
                                <div class="card-text">
                                    (course.description)
                                </div> -->
                        </p>
                        <a href="/courses/<%= course._id %>" class="btn btn-primary">Add</a>
                    </div>
                </div>
                <% } %>

        </div>

    </body>