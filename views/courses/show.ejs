<% layout("/layouts/boilerplate") %>

<body>
        <br><br>
        <h3>Course Detail</h3>
        <br>
        <div class="show-card">
            <div class="show-row">
                <div class="col">
                    <img src="<%= course.image %>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col">
                    <div class="card-body" id="show-body">
                        <h5 class="card-title">
                            <strong><%= course.title %></strong> 
                        </h5>
                        <p class="card-text" id="description">
                            <%= course.description %>
                        </p>
                        <p class="card-text"> &#8377; <%= course.price.toLocaleString("en-IN") %>
                        </p>
                        <p class="card-text">
                            <%= course.rating%>
                        </p>
                        <p class="card-text">
                            <%= course.author %>
                        </p>
                        <p class="card-text">
                            <%= course.language%>
                        </p>
                        <p class="card-text"><small class="text-body-secondary">Last updated 5 months ago</small></p>
                    </div>
                </div>
                <hr>
            </div>
            <div id="show">
                <button class="btn btn-primary"><a href="/courses/<%= course._id %>/edit">Edit</a></button>
                <form method="post" action="/courses/<%= course._id %>?_method=DELETE ">
                    <button class="btn btn-primary">Delete</button>
                </form>
            </div>
        </div>

    </body>